{{#each posts as |post|}}

  <div class='section' id="postsection">
  

    <div class='container'>
      {{#if logged_in}}
        <a href='api/posts/{{post.id}}'>{{post.title}}</a>
      {{else}}
        <a href='/login'>{{post.title}}</a>
      {{/if}}

      <p>Created by {{user.email}}</p>
    </div>

    <div class='container'>
      <p>{{post.body}}</p>
      <h3 id="date">{{post.date_created}}</h3>

    </div>

  </div>

{{/each}}


<script src='../public/js/post.js'></script>
<script src='../public/js/login.js'></script>